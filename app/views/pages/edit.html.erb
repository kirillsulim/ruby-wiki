<% if @page.errors.any? %>
  <div id="error_explanation">
    <h2>Error</h2>
    <ul>
    <% @page.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :page do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/><br/>

  <%= f.label :content %><br/>
  <%= f.text_area :content %><br/><br/>

  <%= f.submit %>
<% end %>
