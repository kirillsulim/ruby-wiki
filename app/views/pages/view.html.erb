<% if @page %>
  <h1><%= @page.title %></h1>
  <p>
    <%= @page.content %>
  </p>
<% end %>
<ul>
  <% for subpage in @pages -%>
  <li><%= link_to subpage.title, subpage.full_name %></li>
  <% end -%>
</ul><br/>
<% if @page %>
  <%= link_to "Add subpage", @page.full_name + "/add" %>
  <%= link_to "Edit", @page.full_name + "/edit" %>
<% else %>
  <%= link_to "Add root page", "/add" %>
<% end %>
